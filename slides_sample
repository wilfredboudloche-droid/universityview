<body class="bg-gray-100 min-h-screen">

    <div class="max-w-6xl mx-auto bg-white shadow-2xl min-h-screen flex flex-col">
        <!-- Branded Header -->
        <div class="bg-white p-4 flex justify-between items-center border-b-4 border-uva-green">
