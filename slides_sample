            <div class="hidden md:block text-right text-uva-blue">
                <span class="text-sm italic font-medium">Online Lesson Portal</span>
            </div>
        </div>

        <!-- Navigation Tabs -->
        <div id="tab-container" class="flex flex-wrap bg-gray-200 p-2 gap-1">
            <!-- Tabs will be injected here -->
        </div>

        <!-- Main Viewer -->
        <div class="flex-grow p-4 md:p-8">
            <div class="iframe-container rounded-lg shadow-2xl bg-black overflow-hidden border border-gray-300">
                <iframe id="slides-viewer" src="" allowfullscreen="true" mozallowfullscreen="true" webkitallowfullscreen="true"></iframe>
            </div>
        </div>

        <!-- Footer -->
        <div class="p-4 bg-gray-50 text-center text-xs text-gray-500 border-t">
            © 2024 University View Academy | Select a tab to view lesson materials.
        </div>
    </div>

    <script>
        /** 
         * ADMIN INSTRUCTIONS:
         * To add or change slides, simply edit the list below.
         * 1. Go to Google Slides -> File -> Share -> Publish to Web -> Embed.
         * 2. Copy the URL inside the src="" attribute.
         * 3. Paste it below.
         */
        const slideDecks = [
            {
                title: "Lecture: Part 1",
                url: "https://docs.google.com/presentation/d/e/2PACX-1vTxfOW3g0L9dWnZfSN5-icCGR2VIb6Y0JsDUej9LjLN9hrSt8WMTZnB3Gi1yZ2TThCDPjIFQgmCl35K/pub?start=false&loop=false&delayms=3000"
            },
            {
                title: "Lecture: Part 2",
                url: "https://docs.google.com/presentation/d/e/2PACX-1vSBElvLG_90dN4vx2jhZbP0OT0y4Ht464-upqYAdWKW8DwSJ_CkuTlhbqnmjAe0pS5FbERWpttWLlx1/pub?start=false&loop=false&delayms=3000"
            },
            {
                title: "Guided Notes",
                url: "https://docs.google.com/presentation/d/e/2PACX-1vT0_placeholder3/embed"
            },
            {
                title: "Review Quiz",
                url: "https://docs.google.com/presentation/d/e/2PACX-1vT0_placeholder4/embed"
            }
        ];

        const tabContainer = document.getElementById('tab-container');
        const viewer = document.getElementById('slides-viewer');

        function loadSlide(index, element) {
            viewer.src = slideDecks[index].url;

            document.querySelectorAll('.nav-button').forEach(btn => {
                btn.classList.remove('active');
            });
            element.classList.add('active');
        }

        slideDecks.forEach((deck, index) => {
            const btn = document.createElement('button');
            btn.className = "nav-button px-6 py-3 transition-all duration-200 font-bold text-sm uppercase tracking-tight bg-gray-300 text-gray-700 hover:bg-gray-400";
            btn.innerText = deck.title;
            btn.onclick = (e) => loadSlide(index, e.target);
            tabContainer.appendChild(btn);

            if (index === 0) loadSlide(0, btn);
        });
    </script>
</body>
